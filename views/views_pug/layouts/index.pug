html
head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')

    // Bootstrap CSS
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    title pug template

.container.py-3
    include ../partials/header
    main
        .row.row-cols-1.row-cols-md-12.mb-12.text-center
            .col
        .card.mb-12.rounded-3.shadow-sm
            .card-header.py-3
                h4.my-0.fw-normal Ingrese Protducto
            .card-body
                form.row.g-3.pt-5(action='/productos' method='post')
                    .col-md-6
                        label.form-label(for='title') Nombre del producto
                        input#title.form-control(type='text' name='title' required='')
                    .col-md-6
                        label.form-label(for='price') Precio
                        input#price.form-control(type='number' name='price' required='')
                    .col-12.text-center
                        img(src=foto alt='' height='20px')
                        label.form-label(for='thumbnail') Foto URL
                        input#thumbnail.form-control(type='text' name='thumbnail' required='' value=foto)
                    .col-12
                        button.w-100.btn.btn-lg.btn-outline-primary(type='submit') Guardar
                    if mensaje != ''
                        .alert.alert-success(role='alert')
                            | #{mensaje}!!

    footer.pt-4.my-md-5.pt-md-5.border-top
        .row
            .col-12.col-md
                small.d-block.mb-3.text-muted &copy; Nestor Uriel Yepez -&gt;Reto plantillas
