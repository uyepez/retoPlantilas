html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')

  // Bootstrap CSS
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  title pug template

.container.py-3

    include ../partials/header
    main
        .row.row-cols-1.row-cols-md-12.mb-12.text-center
            .col
                .card.mb-12.rounded-3.shadow-sm
                .card-header.py-3
                    h4.my-0.fw-normal Vista de Protductos
                if lista.length == 0
                    .alert.alert-warning(role='alert')
                        | No se ecnontraron productos!! #{totalProductos}
                else
                    .table-responsive
                        table.table.align-middle
                            thead
                                tr
                                th(scope='col') Nombre
                                th(scope='col') Precio
                                th(scope='col') Foto
                            tbody
                                each n in lista
                                    tr
                                        td
                                            | #{n.title}
                                        td
                                            | #{n.price}
                                        td
                                            img(src=n.thumbnail alt='' height='60px')
        footer.pt-4.my-md-5.pt-md-5.border-top
            .row
                .col-12.col-md
                    small.d-block.mb-3.text-muted &copy; Nestor Uriel Yepez -&gt;Reto plantillas
